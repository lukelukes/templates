{
  "name": "tauri-react",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@10.26.2",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "tauri": "tauri",
    "lint": "oxlint --type-aware --config oxlint.json src",
    "lint:fix": "oxlint  --type-aware --config oxlint.json --fix src",
    "fmt": "oxfmt --config oxfmt.json --write src",
    "fmt:check": "oxfmt --config oxfmt.json --check src",
    "check": "pnpm run typecheck && pnpm run fmt:check && pnpm run lint",
    "knip": "knip",
    "test:watch": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc"
  },
  "dependencies": {
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "@tauri-apps/api": "2.9.1",
    "@tauri-apps/plugin-opener": "2.5.2"
  },
  "devDependencies": {
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react-swc": "4.2.2",
    "typescript": "5.9.3",
    "vite": "7.3.0",
    "@tauri-apps/cli": "2.9.6",
    "oxlint": "1.35.0",
    "oxlint-tsgolint": "0.10.0",
    "oxfmt": "0.20.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "vitest": "4.0.16",
    "@vitest/ui": "4.0.16",
    "@vitest/coverage-v8": "4.0.16",
    "knip": "5.77.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "oxlint --config oxlint.json --fix",
      "oxfmt --config oxfmt.json --write"
    ],
    "*.{json,md}": [
      "oxfmt --config oxfmt.json --write"
    ]
  }
}
