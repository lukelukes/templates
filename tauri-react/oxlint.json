{
  "$schema": "./node_modules/oxlint/configuration_schema.json",

  "plugins": [
    "typescript",
    "react",
    "react-perf",
    "import",
    "unicorn",
    "jsx-a11y",
    "promise",
    "vitest"
  ],

  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "warn",
    "perf": "warn"
  },

  "settings": {
    "react": {
      "version": "19"
    },
    "vitest": {
      "typecheck": true
    }
  },

  "ignorePatterns": [
    "dist",
    "node_modules",
    "*.config.*"
  ]
}
